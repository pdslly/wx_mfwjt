/* pages/swipe/index.wxss */
.swipe-navs{
  position: relative;
  width: 100%;
  height: 10vh;
  line-height: 10vh;
  display: flex;
  flex-direction: row;
}
.swipe-slide{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 250rpx;
  height: 2px;
  background: red;
}
.swipe-item-list{
  height: 100%;
  width: 250rpx;
  text-align: center;
  line-height: inherit;
}
.swipe-item-list.on{
  background: pink;
}
.m-swiper{
  height: 90vh;
}